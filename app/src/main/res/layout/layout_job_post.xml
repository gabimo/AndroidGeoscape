<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvPostLayoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="TITLE TITLE"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/tvPostLayoutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"
        android:layout_below="@id/tvPostLayoutTitle"
        android:layout_marginTop="5dip"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvPostLayoutLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:text="LOCATION"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/tvPostLayoutTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPostLayoutDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvPostLayoutDate" />

</RelativeLayout>