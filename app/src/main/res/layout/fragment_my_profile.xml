<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvMyProfileEmailLabel"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginTop="340dp"
        android:text="@string/email"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileUserIDLabel" />

    <TextView
        android:id="@+id/tvMyProfileUserIDLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginTop="305dp"
        android:text="@string/user_id"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileUserID"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/tvMyProfileNameLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginTop="375dp"
        android:text="@string/your_name_colon"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileEmailLabel" />

    <TextView
        android:id="@+id/tvMyProfileName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileUserEmail"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileUserEmail" />

    <TextView
        android:id="@+id/tvMyProfileLocationLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginTop="410dp"
        android:text="@string/your_location"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileNameLabel" />

    <TextView
        android:id="@+id/tvMyProfileLocation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyProfileUserID"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintRight_toRightOf="@+id/ivMyProfileImage"
        app:layout_constraintLeft_toLeftOf="@+id/ivMyProfileImage"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/tvMyProfileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileUserID"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileUserID"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <ImageView
        android:id="@+id/ivMyProfileImage"
        android:layout_width="161dp"
        android:layout_height="167dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="63dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Profile Picture"
        app:layout_constraintBottom_toTopOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>