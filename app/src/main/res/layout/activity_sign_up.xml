<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lawnscape.activities.LoginActivity">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="createAccount"
        android:text="@string/create_account"
        android:visibility="visible"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etSignUpPassword"
        android:layout_alignStart="@+id/etSignUpPassword"
        app:layout_constraintRight_toRightOf="@+id/tvSignUpLoginButton"
        app:layout_constraintLeft_toLeftOf="@+id/tvSignUpLoginButton"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="88dp" />

    <EditText
        android:id="@+id/etSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/e_mail_address"
        android:inputType="textEmailAddress"
        android:layout_alignBaseline="@+id/tvSignUpEmailLabel"
        android:layout_alignBottom="@+id/tvSignUpEmailLabel"
        android:layout_alignLeft="@+id/tvSignUpHeader"
        android:layout_alignStart="@+id/tvSignUpHeader"
        app:layout_constraintRight_toRightOf="@+id/etSignUpName"
        app:layout_constraintLeft_toLeftOf="@+id/etSignUpName"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpName" />

    <EditText
        android:id="@+id/etSignUpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSignUpEmail"
        android:layout_alignStart="@+id/etSignUpEmail"
        android:layout_below="@+id/etSignUpEmail"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="@+id/etSignUpEmail"
        app:layout_constraintLeft_toLeftOf="@+id/etSignUpEmail"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpEmail"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/etSignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSignUpEmail"
        android:layout_alignStart="@+id/etSignUpEmail"
        android:layout_below="@+id/etSignUpEmail"
        android:ems="10"
        android:hint="@string/firstname_lastname"
        android:inputType="textPersonName"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUpHeader"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="27dp" />

    <EditText
        android:id="@+id/etSignUpLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSignUpEmail"
        android:layout_alignStart="@+id/etSignUpEmail"
        android:layout_below="@+id/etSignUpEmail"
        android:ems="10"
        android:hint="@string/location"
        android:inputType="textCapSentences"
        app:layout_constraintRight_toRightOf="@+id/etSignUpPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etSignUpPassword"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="59dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignUp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/tvSignUpHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/welcome"
        android:textColor="@android:color/holo_purple"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvSignUpEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSignUpHeader"
        android:text="@string/e_mail"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etSignUpEmail"
        app:layout_constraintTop_toTopOf="@+id/etSignUpEmail"
        app:layout_constraintRight_toRightOf="@+id/tvSignUpPasswordLabel" />

    <TextView
        android:id="@+id/tvSignUpPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etSignUpPassword"
        android:layout_alignBottom="@+id/etSignUpPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/password_colon"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etSignUpPassword"
        app:layout_constraintTop_toTopOf="@+id/etSignUpPassword"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/tvSignUpNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etSignUpPassword"
        android:layout_alignBottom="@+id/etSignUpPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etSignUpName"
        app:layout_constraintRight_toRightOf="@+id/tvSignUpEmailLabel"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintTop_toTopOf="@+id/etSignUpName"
        android:layout_marginRight="-8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etSignUpPassword"
        android:layout_alignBottom="@+id/etSignUpPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/Location_colon"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etSignUpLocation"
        app:layout_constraintTop_toTopOf="@+id/etSignUpLocation"
        android:id="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/etSignUpLocation"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvSignUpLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backToLogin"
        android:text="@string/back_to_login"
        android:textColor="@android:color/holo_green_light"
        android:visibility="visible"
        android:layout_below="@+id/buttonSignUp"
        android:layout_centerHorizontal="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1" />
</android.support.constraint.ConstraintLayout>
