<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lawnscape.LoginActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/etLoginEmail"
        app:bootstrapSize="lg"
        app:bootstrapBrand="primary"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ivLoginLogo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivLoginLogo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivLoginLogo" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/etLoginPassword"
        android:typeface="sans"
        app:bootstrapSize="lg"
        app:bootstrapBrand="primary"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/etLoginEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/etLoginEmail"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etLoginEmail"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonLogin"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="login"
        android:text="Log In"
        android:visibility="visible"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etLoginPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/etLoginPassword"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/etLoginPassword"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/tvLoginSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signup"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:typeface="normal"
        android:layout_marginRight="165dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginSignUpLabel"
        app:layout_constraintHorizontal_bias="0.975" />

    <TextView
        android:id="@+id/tvLoginSignUpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.407" />

    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="331dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_geoscape"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
