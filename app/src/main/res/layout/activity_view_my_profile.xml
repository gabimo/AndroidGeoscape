<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lawnscape.ViewMyProfileActivity">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonPostNewJob"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="gotoPostNewJob"
        android:text="@string/post_new_job"
        android:visibility="visible"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonEditProfile"
        android:layout_width="143dp"
        android:layout_height="33dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="gotoProfileSettings"
        android:text="@string/edit_profile"
        android:visibility="visible"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintLeft_toRightOf="@+id/ivMyProfileImage"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="79dp"
        android:layout_height="19dp"
        android:id="@+id/tvMyProfileEmailLabel"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintLeft_toRightOf="@+id/ivMyProfileImage"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:text="@string/user_id"
        android:layout_width="79dp"
        android:layout_height="19dp"
        android:id="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivMyProfileImage"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="-12dp" />

    <TextView
        android:text="@string/your_name_colon"
        android:layout_width="79dp"
        android:layout_height="19dp"
        android:id="@+id/tvMyProfileNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintLeft_toRightOf="@+id/ivMyProfileImage"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tvMyProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileUserEmail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintHorizontal_bias="0.099"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/tvMyProfileLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_location"
        app:layout_constraintLeft_toRightOf="@+id/ivMyProfileImage"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileNameLabel" />

    <TextView
        android:id="@+id/tvMyProfileLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileName"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileLocationLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditProfile" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyProfileUserID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileUserIDLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvMyProfileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfileUserID"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvMyProfileEmailLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/ivMyProfileImage"
        android:layout_width="123dp"
        android:layout_height="139dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfileListOfJobs"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteY="13dp"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/buttonProfileJobsMap"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:onClick="mapJobsButton"
        android:text="@string/see_jobs_on_google_maps"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfileSearchJobs"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonProfileMyPosts"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:onClick="myPostsButton"
        android:text="@string/view_my_posts"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfileJobsMap"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonProfileSearchJobs"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:onClick="searchJobsButton"
        android:text="@string/search_jobs"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPostNewJob"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.4" />

    <Button
        android:id="@+id/buttonProfileListOfJobs"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:onClick="listAllJobsButton"
        android:text="@string/list_of_all_jobs"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditProfile"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfileMyPosts"
        app:layout_constraintVertical_bias="0.892"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.438" />
</android.support.constraint.ConstraintLayout>