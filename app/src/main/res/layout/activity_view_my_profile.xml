<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lawnscape.ViewMyProfileActivity">

    <TextView
        android:id="@+id/tvMyProfileEmailLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:text="@string/email"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.691" />

    <TextView
        android:id="@+id/tvMyProfileUserIDLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:text="@string/user_id"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.554" />

    <TextView
        android:id="@+id/tvMyProfileNameLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:text="@string/your_name_colon"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.621" />

    <TextView
        android:id="@+id/tvMyProfileName"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileUserEmail"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileNameLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileUserEmail" />

    <TextView
        android:id="@+id/tvMyProfileLocationLabel"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:text="@string/your_location"
        tools:layout_editor_absoluteX="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <TextView
        android:id="@+id/tvMyProfileLocation"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        tools:layout_editor_absoluteX="206dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileLocationLabel"
        app:layout_constraintVertical_bias="0.774" />

    <TextView
        android:id="@+id/tvMyProfileUserID"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileUserIDLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileName"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvMyProfileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintRight_toRightOf="@+id/tvMyProfileLocation"
        app:layout_constraintTop_toTopOf="@+id/tvMyProfileEmailLabel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.701"
        app:layout_constraintLeft_toLeftOf="@+id/tvMyProfileLocation" />

    <ImageView
        android:id="@+id/ivMyProfileImage"
        android:layout_width="165dp"
        android:layout_height="152dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.136"
        app:layout_constraintHorizontal_bias="0.502" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>