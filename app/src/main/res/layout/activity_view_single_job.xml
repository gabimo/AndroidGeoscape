<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_view_single_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.lawnscape.ViewSingleJobActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivSingleJobPhoto"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_weight="0.18"
        app:srcCompat="@drawable/cast_abc_scrubber_control_to_pressed_mtrl_000"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="3dp" />

    <TextView
        android:id="@+id/tvSingleJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/ivSingleJobPhoto"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvSingleJobLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSingleJobLocation"
        android:text="Location:"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ivSingleJobPhoto"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSingleJobDescription"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSingleJobLocation"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="124dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvSingleJobLocationLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleJobDateLabel" />


    <TextView
        android:id="@+id/tvSingleJobDescription"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleJobLocation" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonRequestJob"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:onClick="requestJob"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:bootstrapText="Request Job"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveJob"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonSaveJob"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:elevation="0dp"
        android:onClick="saveJob"
        android:textAlignment="center"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:bootstrapText="Save Job"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChatWithPoster"
        app:roundedCorners="true"
        app:showOutline="false"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/buttonEditPostDetails"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:onClick="editJob"
        android:text="Edit Post Details"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRequestJob"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:id="@+id/buttonChatWithPoster"
        android:onClick="openChat"
        app:bootstrapText="Chat with poster"
        app:bootstrapSize="lg"
        app:bootstrapBrand="success"
        app:roundedCorners="true"
        app:showOutline="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleJobDescription" />


    <Button
        android:id="@+id/buttonDeletePost"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:onClick="deletePost"
        android:text="Delete This Post"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditPostDetails"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvSingleJobDate"
        android:layout_width="77dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleJobTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvSingleJobDateLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSingleJobLocation"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSingleJobDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleJobTitle"
        app:layout_constraintLeft_toRightOf="@+id/ivSingleJobPhoto"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />
</android.support.constraint.ConstraintLayout>
